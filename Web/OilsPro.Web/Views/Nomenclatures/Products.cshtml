@model IEnumerable<OilsPro.Data.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<p>
    <a asp-controller="Products" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Viscosity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageCapacity)
            </th>
            <th>
                @if (this.User.IsInRole("Admin"))
                {

                }
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Viscosity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageCapacity)
                </td>
                <td>
                    @if (this.User.IsInRole("Admin"))
                    {
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit |</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id"> Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
