@model OilsPro.Data.Models.Driver

@{
    ViewData["Title"] = "IncludeNewDriver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>IncludeNewDriver</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IncludeNewDriver">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarrierId" class="control-label"></label>
                <input asp-for="CarrierId" class="form-control" value="@ViewBag.CarrierId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-action="Edit" asp-controller="Carriers" asp-route-id="@ViewBag.CarrierId">Back to List</a>
</div>

