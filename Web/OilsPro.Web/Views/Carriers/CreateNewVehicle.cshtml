@model OilsPro.Data.Models.Vehicle

@{
    ViewData["Title"] = "CreateNewVehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateNewVehicle</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewVehicle" id="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNumber" class="control-label"></label>
                <input asp-for="RegNumber" class="form-control" />
                <span asp-validation-for="RegNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Carrier name</label>
                <select name="carrierName" class="form-control" asp-items="ViewBag.Carriers" id="carrier"></select>
            </div>
            <div class="form-group">
                <input type="button" value="Create" class="btn btn-primary" id="create" />
            </div>

            <script src="~/Js/SelectCarrier.js"></script>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Nomenclatures" asp-action="Vehicles">Back to List</a>
</div>

@*----------------MODAL-----------------------------*@
<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Check for carrier selection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Choose a carrier name, please !</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>