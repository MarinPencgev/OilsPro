@model OilsPro.Data.Models.Vehicle

@{
    ViewData["Title"] = "CreateNewVehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create new vehicle</h1>

<h4>Include new vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewVehicle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNumber" class="control-label"></label>
                <input asp-for="RegNumber" class="form-control" />
                <span asp-validation-for="RegNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarrierId" class="control-label"></label>
                <input asp-for="CarrierId" class="form-control" value="@Model.CarrierId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-action="Edit" asp-controller="Carriers" asp-route-id="@Model.CarrierId">Back to List</a>
</div>

