@model OilsPro.Data.Models.DeliveryAddress

@{
    ViewData["Title"] = "CreateNewAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateNewAddress</h1>

<h4>DeliveryAddress</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewAddress" id="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Town" class="control-label"></label>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiverId" class="control-label"></label>
                <select name="receiverName" class="form-control" asp-items="ViewBag.Receivers" id="receiver"></select>
            </div>
            <div class="form-group">
                <input type="button" value="Create" class="btn btn-primary" id="create" />
            </div>

            <script src="~/Js/SelectReceiver.js"></script>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Nomenclatures" asp-action="Addresses">Back to List</a>
</div>

@*----------------MODAL-----------------------------*@
<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Check for receiver selection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Choose a receiver name, please !</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>